# Angular Spark CLI - Development Sandbox
# Base: Ubuntu + Node.js + Claude Code CLI

FROM ubuntu:24.04

# Prevent interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Set working directory
WORKDIR /workspace

# Install basic dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    wget \
    ca-certificates \
    gnupg \
    lsb-release \
    build-essential \
    vim \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js 24.x (using NodeSource)
RUN curl -fsSL https://deb.nodesource.com/setup_24.x | bash - && \
    apt-get install -y nodejs && \
    rm -rf /var/lib/apt/lists/*

# Verify Node.js and npm versions
RUN node --version && npm --version

# Install pnpm (optional, but good for modern Angular projects)
RUN npm install -g pnpm

# Install Angular CLI globally
RUN npm install -g @angular/cli

# Install Claude Code CLI via npm
# Note: You can also use the install script from: https://claude.ai/download

# Method 1: Install via npm (recommended for Docker)
RUN npm install -g @anthropic-ai/claude-code

# Method 2: Alternative - install via curl if npm method doesn't work
# RUN curl -fsSL https://cdn.jsdelivr.net/npm/@anthropic-ai/claude-code@latest/install.sh | bash

# Add Claude to PATH if needed
ENV PATH="/root/.local/bin:${PATH}"

# Create app directory
RUN mkdir -p /workspace/app

# Copy package files for dependency installation
COPY package*.json ./

# Install dependencies
RUN npm ci || npm install

# Copy the rest of the application
COPY . .

# Expose port for Angular dev server
EXPOSE 4200-4201

# Set YOLO mode environment variables
# These reduce confirmation prompts in Claude Code
ENV CLAUDE_YOLO_MODE=true
ENV CLAUDE_AUTO_CONFIRM=true
ENV CLAUDE_SKIP_CONFIRMATIONS=true

# Default command - start dev server
CMD ["npm", "start"]

# Or for an interactive shell:
# CMD ["/bin/bash"]
